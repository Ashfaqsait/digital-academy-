<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/back2"
    tools:context=".infopage">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/sarslogo" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app was developed by"
        android:gravity="center"
        android:background="#ff9933"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SARS Develops"
        android:gravity="center"
        android:background="#138808"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

        <ImageView
            android:id="@+id/devimg"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/dacademypic"
            />

    <TextView
        android:id="@+id/devname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developers"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#9C27B0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Supported by, Santhosh (Senior)"
        android:textSize="25sp"
        android:gravity="center"
        android:textColor="#9C27B0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <Button
        android:id="@+id/addfaculty"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="contact us"
        android:textSize="20sp"
        android:textStyle="italic"
        app:backgroundTint="#123456"
        android:drawableLeft="@drawable/ic_call"
        android:layout_gravity="center_horizontal"
        android:textColor="#E5E80B" />

</LinearLayout>